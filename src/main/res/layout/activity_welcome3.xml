<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/moverlogo"
    android:alpha="0.8"
    tools:context=".WelcomeActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="200dp"
        android:text="무버입니당" />

    <Button
        android:id="@+id/welcome_mover_btn"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:gravity="center"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="80dp"
        android:background="#874242"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:textAllCaps="false"
        android:text="I am a Mover" />

    <Button
        android:id="@+id/welcome_needer_btn"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:width="100sp"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="150dp"
        android:gravity="center"
        android:background="#D595A0"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:textAllCaps="false"
        android:text="I need a Mover" />
</RelativeLayout>